<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nd_header_height"
    android:orientation="vertical"
    android:background="?colorPrimary"
    >

    <com.mortr.soloviev.mdc2018soloviev.ui.mainScreen.CircleCropPhoto
        android:id="@+id/navigation_header_avatar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/welcome_page_margin"
        android:layout_weight="3"
        app:photo="@drawable/photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/welcome_page_margin"
        android:gravity="center"
        android:text="@string/dev_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/welcome_page_margin"
        android:gravity="center"
        android:text="@string/github_account_name" />
</LinearLayout>