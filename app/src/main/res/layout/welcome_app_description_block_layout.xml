<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mortr.soloviev.mdc2018soloviev.ui.mainScreen.CircleCropPhoto
        android:id="@+id/icon"
        android:layout_height="wrap_content"
        android:layout_above="@+id/app_name"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@drawable/circle"
        app:layout_widthPercent="40%"
        app:photo="@mipmap/ic_launcher_custom" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="@dimen/welcome_page_app_name_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/welcome_pages_description_text"
        android:textSize="@dimen/welcome_page_description_text_size" />

</android.support.percent.PercentRelativeLayout>