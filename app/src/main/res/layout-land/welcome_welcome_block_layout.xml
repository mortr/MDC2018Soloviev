<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mortr.soloviev.mdc2018soloviev.ui.mainScreen.CircleCropPhoto
        android:id="@+id/icon"
        android:layout_width="@dimen/welcome_page_icon"
        android:layout_height="@dimen/welcome_page_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/welcome_page_margin"
        android:layout_marginLeft="@dimen/welcome_page_margin"
        android:layout_marginRight="@dimen/welcome_page_margin"
        android:layout_marginStart="@dimen/welcome_page_margin"
        android:adjustViewBounds="true"
        app:photo="@mipmap/ic_launcher_custom" />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:orientation="vertical">

        <TextView
            android:gravity="center_vertical|left|start"
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/welcome_page_app_name_text_size"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left|start"
            android:text="@string/welcome_pages_welcome_text"
            android:textSize="@dimen/welcome_page_welcome_text_size"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>
</RelativeLayout>